pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'After Editing Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'After Editing Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'After Editing Deploying....'
            }
        }
          stage('Prod') {
            steps {
                echo 'After Editing Prod.. manulaly added....'
            }
        }
        stage ('Notification'){
		emailext (
		      subject: "Job Completed",
		      body: "Jenkins Pipeline Job for Maven Build got completed !!!",
		      to: "sauravkrwork@gmail.com"
		    )
	}
    }
}
